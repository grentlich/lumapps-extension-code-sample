{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "body": [
        {
            "type": "Container",
            "$data": "${actions.ticket_list_api.response.body.result}",
            "items": [
                {
                    "size": "Medium",
                    "text": "${short_description}",
                    "type": "TextBlock",
                    "wrap": true,
                    "weight": "Bolder"
                },
                {
                    "text": "${number}",
                    "type": "TextBlock",
                    "wrap": true,
                    "color": "Accent"
                },
                {
                    "text": "${description}",
                    "type": "TextBlock",
                    "wrap": true
                },
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "url": "https://<your-instance>.service-now.com/incident.do?sysparm_query=number%3D${number}",
                            "type": "Action.OpenUrl",
                            "style": "positive",
                            "title": "Open ticket"
                        }
                    ]
                }
            ],
            "spacing": "Large",
            "separator": true
        }
    ],
    "type": "AdaptiveCard",
    "version": "1.6"
}
